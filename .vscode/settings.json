{
	// multiple page exclude setting

  // vscode + prettier + typescript setting
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "editor.tabSize": 2,
  // end vscode + prettier + typescript setting
  // filehead setting
  "psi-header.templates": [
    {
      "language": "*",
      "template": [
				"@Title: <<filename>>",
				"@Package: <<projectname>>",
				"@Description: ",
				"@Author: <<author>>",
				"@Date: <<filecreated('YYYY-MM-DD HH:mm:ss')>>",
				"@Version: <<projectversion>>", 
				"@Copyright: <<year>> Shenzhen Hive Box Technology Co.,Ltd All rights reserved. ", 
				"@Note: "
			]
    }
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
	"editor.insertSpaces": false
}
